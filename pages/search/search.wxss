.top_img {
  z-index: -1;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 417rpx;
}
.search_box {
  width: 100%;
  padding: 50rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.search_box_top {
  width: 100%;
  margin-bottom: 44rpx;
}
.search_box_top_box {
  position: relative;
  width: 100%;
}
.search_box_top_box_icon {
  position: absolute;
  left: 22rpx;
  top: 50%;
  margin-top: -13.5rpx;
  padding-right: 10rpx;
  display: block;
  width: 22rpx;
  height: 27rpx;
  border-right: 2px solid #FFCF51;
}
.search_box_top_box_cancel {
  position: absolute;
  right: 22rpx;
  top: 50%;
  margin-top: -13.5rpx;
  width: 27rpx;
  height: 27rpx;
  background: url(https://jgl.oss-cn-beijing.aliyuncs.com/search/20210226174815.png) no-repeat;
  background-size:cover;
}
.search_box_top_box_input {
  height: 48rpx;
  padding: 0 60rpx 0 76rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid #fff;
  font-size: 25rpx;
  font-family: Aktiv Grotesk CNSG;
  font-weight: 400;
  border-radius: 24rpx;
  color: #FF9F1E;
}

.search_box_content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 31rpx 24rpx;
  box-sizing: border-box;
}
.search_box_content_history {
  margin-bottom: 20rpx;
}
.search_box_content_history_box {
  display: flex;
  justify-content: space-between;
}
.search_box_content_history_title {
  font-size: 25rpx;
  font-weight: 600;
  color: #1E1E1E;
  margin-bottom: 31rpx;
}
.search_box_content_history_box image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 24rpx;
  margin-top: 6rpx;
}
.search_box_content_history_tag {
  display: flex;
  flex-wrap: wrap;
}
.search_box_content_history_tag_box {
  height: 38rpx;
  line-height: 38rpx;
  border-radius: 50rpx;
  background: #E5E5E5;
  margin: 0 40rpx 30rpx 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 21rpx;
  color: #666666;
}
.search_box_content_history_none {
  display: flex;
  align-items: center;
  margin-bottom: 54rpx;
}
.search_box_content_history_none_box {
  color: rgb(187, 182, 182);
  font-size: 20rpx;
}

.search_box_content_hot_title {
  font-size: 25rpx;
  font-weight: 600;
  color: #1E1E1E;
}
.search_box_content_hot_goods_box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 50rpx 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E8E8E8;
}
.search_box_content_hot_goods_box:last-child {
  border: none;
}
.search_box_content_hot_goods_box image {
  width: 217rpx;
  height: 160rpx;
}
.search_box_content_hot_goods_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 33rpx;
}
.search_box_content_hot_goods_title {
  font-size: 25rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #3C3C3C;
  line-height: 30rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.search_box_content_hot_goods_price {
  font-size: 25rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FF9214;
}
.hint_info {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 33rpx;
  box-sizing: border-box;
  font-size: 21rpx;
  color: #9D9D9D;
}
.hint_load_info {
  display: flex;
  align-items: center;
  color: #9D9D9D;
}
.hint_load_info image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 19rpx;
}

.no_recommend_hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 21rpx;
  margin: 123rpx 0 408rpx;
}
.no_recommend_hint image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 59rpx;
}
.no_recommend_hint_sorry {
  margin-bottom: 47rpx;
  color: #FF991A;
}
.no_recommend_hint_change {
  color: #797979;
}