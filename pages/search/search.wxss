.top_img {
  z-index: -1;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 417rpx;
}
.search_box {
  width: 100%;
  padding: 50rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.search_box_top {
  width: 100%;
}
.search_box_top_box {
  position: relative;
  width: 100%;
}
.search_box_top_box_icon {
  position: absolute;
  left: 22rpx;
  top: 50%;
  margin-top: -13.5rpx;
  padding-right: 10rpx;
  display: block;
  width: 27rpx;
  height: 27rpx;
  border-right: 2px solid #FFCF51;
}
.search_box_top_box_input {
  height: 48rpx;
  padding-left: 76rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid #fff;
  font-size: 25rpx;
  font-family: Aktiv Grotesk CNSG;
  font-weight: 400;
  border-radius: 24rpx;
  color: #FF9F1E;
}