page {
  background-color: #EEEEEE;
  position: relative;
  width: 100%;
  height: 100%;
}
.page {
  width: 100%;
  height: 100%;
}

.top_img{
  z-index: 1;
  width:100%;
  position: absolute;
  left:0;
  top:0;
  height:417rpx;
}
.bid_box {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  padding: 160rpx 40rpx 0 40rpx;
  box-sizing: border-box;
}
.bid_info {
  display: flex;
  justify-content: space-between;
  padding: 26rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #DCDCDC;
  font-size: 21rpx;
  background: #fff;
  color: #9D9D9D;
}
.bid_info:first-child {
  border-radius: 21rpx 21rpx 0 0;
}
.bid_info:last-child {
  border-radius: 0 0 21rpx 21rpx;
  border-bottom: none;
}
.bid_info_left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 360rpx;
}
.bid_info_first {
  color: #FF9214;
}
.bid_info_left image {
  width: 51rpx;
  height: 51rpx;
  border-radius: 50%;
  display: block;
}
.bid_info_right {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bid_info_not {
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 18rpx;
  color: #BABABA;
}

.hint_info {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 33rpx 0;
  box-sizing: border-box;
  font-size: 21rpx;
  color: #9D9D9D;
}
.hint_load_info {
  display: flex;
  align-items: center;
}
.hint_load_info image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 19rpx;
}