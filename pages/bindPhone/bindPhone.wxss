page {
  background-color: #EEEEEE;
  position: relative;
  width: 100%;
  height: 100%;
  letter-spacing: 0.5rpx;
}

.earnest_money_list {
  position: absolute;
  z-index: 2;
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}
.earnest_money_pay_list {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.earnest_money_pay_box {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.earnest_money_pay_line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #EEEEEE;
  padding: 44rpx 19rpx;
  box-sizing: border-box;
  color: #010101;
}

.earnest_money_two_state {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: none;
  padding: 596rpx 19rpx 50rpx;
  box-sizing: border-box;
}
.earnest_money_pay_line_font {
  font-size: 12px;
}
.earnest_money_message_input {
  display: flex;
  align-items: center;
  font-size: 12px;
}
.earnest_money_message_input image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}
.get_captcha {
  position: relative;
  font-size: 12px;
  color: #F19926;
  padding-left: 15rpx;
  border-left: 1px solid #F19926;
}
.get_captcha button {
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  padding: 0;
}

.bid_btn {
  width: 604rpx;
  height: 67rpx;
  line-height: 67rpx;
  text-align: center;
  font-size: 13px;
  border-radius: 20rpx;
  color: #fff;
  background: #FFBA1E;
}
