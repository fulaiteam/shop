/* pages/pass/pass.wxss */

.box {
  width: 750rpx;
  height: 1333rpx;
  background-color: #eee;
 position: relative;
}
.box_index {
  width: 100%;
  height: 453rpx;
 
background: linear-gradient(107deg, #936DFF 0%, #FFD164 0%, #FF8A0D 100%);
}
.box_pass {
  position: absolute;
  top: 46rpx;
  left: 40rpx;
  width: 671rpx;
height: 1080rpx;
background: #FFFFFF;
border-radius: 14rpx;
}
.box_pass_title {
  width: 350rpx;
height: 56rpx;
font-size: 59rpx;
font-family: Source Han Sans CN;
font-weight: 400;
color: #000000;
margin-top: 66rpx;
margin-left: 54rpx;
margin-bottom: 72rpx;
}
.box_phone {
  display: flex;
  justify-content: space-between;
  width:500rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 54rpx;
font-size: 25rpx;
font-family: Source Han Sans CN;
font-weight: 400;
color: #000000;
margin-bottom: 50rpx;

}
.verificationCode {
  overflow: hidden;
  position: relative;
  width: 600rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 60rpx;
  margin-left: 40rpx;
  margin-bottom: 62rpx;
}
.verificationCode > input {
  width: calc(200%);
  position: absolute;
  left: -100px;
  top: 20px;
  height: 60px;
  background: #e9e9e9;
  opacity: 0;
  font-size: 10px;
}
.verificationCode > view {
  width: 84rpx;
  border: 1rpx solid #979797;
  height: 84rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 4rpx;
  font-size: 30rpx;
  color: #ffcf53;
}
.verificationCode .activeView {
  border-color: #FFBD22;
}
.lodingBtn {
  width: 567rpx;
  height: 86rpx;
  background: #FFBD22;
  text-align: center;
  line-height: 86rpx;
  color: #fff;
  box-shadow: 2rpx 3rpx 7rpx 0rpx rgba(130, 80, 111, 0.17);
  border-radius: 31rpx;
  margin:0 auto;
  
font-size: 25rpx;
font-family: Source Han Sans CN;
font-weight: 400;
}
.trueLoding {
  background: #FFBD22;
  text-align: center;
  line-height: 86rpx;
  color: #fff;
  box-shadow: 2rpx 3rpx 7rpx 0rpx rgba(130, 80, 111, 0.17);
  border-radius: 31rpx;
  margin:0 auto;
  font-size: 25rpx;
font-family: Source Han Sans CN;
font-weight: 400;
}
.againTime,
.againTimeBtn {
  color: #ACACAC;
  
font-size: 25rpx;
font-family: Source Han Sans CN;
font-weight: 400;
  text-align: center;
  margin-top: 15px;
  text-decoration: underline;
}
.againTimeBtn {
  color: #59ACFF;
}