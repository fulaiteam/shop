.service_messages_font {
  font-size: 12px;
  color: #4A4A4A;
}

.time_line {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 36rpx;
}
.time_box {
  width: 146rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  border-radius: 8rpx;
  background: #D3DAE4;
  font-size: 22rpx;
  color: #fff;
}

.user_line {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 36rpx;
}
.user_box {
  float: right;
  display: flex;
  align-items: center;
}
.user_messages {
  max-width: 460rpx;
  padding: 26rpx 47rpx 26rpx 49rpx;
  box-sizing: border-box;
  background: #FFC649;
  border-radius: 20rpx 20rpx 0 20rpx;
}
.user_messages_font{
  font-size: 12px;
  color: #fff;
}
.user_head {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.user_head image {
  width: 100%;
  height: 100%;
}


.btm_message_send {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  background: #fff;
}
.btm_message_send_input {
  flex: 1;
  font-size: 12px;
}
.btm_message_send_input input {
  margin: 32rpx 53rpx;
  /* box-sizing: border-box; */
}
.btm_send_btn_box {
  display: flex;
  justify-content: space-between;
  width: 255rpx;
}
.btm_send_btn {
  width: 126rpx;
  background: #FFC649;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btm_send_btn image{
  width: 42rpx;
  height: 42rpx;
}
