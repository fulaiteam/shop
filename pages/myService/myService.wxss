page {
  background-color: #EEEEEE;
  position: relative;
  width: 100%;
  height: 100%;
  letter-spacing: 0.5px;
}

.chat_window {
  padding: 27rpx 40rpx;
  box-sizing: border-box;
}
.service_line {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 36rpx;
}
.service_box {
  display: flex;
  align-items: center;
}
.service_head {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 72rpx;
  height: 72rpx;
  background: #FFC649;
  border-radius: 50%;
  margin-right: 20rpx;
}
.service_head image {
  width: 46rpx;
  height: 46rpx;
}
.service_messages {
  position: relative;
  max-width: 460rpx;
  padding: 26rpx 20rpx 26rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx 20rpx 20rpx 0;
}
