page {
  background-color: #EEEEEE;
  position: relative;
  width: 100%;
  height: 100vh;
}

.top_img{
  z-index: 1;
  width:100%;
  position: absolute;
  left:0;
  top:0;
  height:417rpx;
}

.auction_details {
  width: 100%;
  position: absolute;
  z-index: 2;
}
.auction_head {
  overflow: hidden;
}
.auction_img{
  position: relative;
  width: 100%;
  height: 421rpx;
  margin-bottom: 30rpx;
}
.auction_img .auction_photo {
  width: 100%;
  height: 100%;
}
.collect_remind {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(255, 156, 28, 0.5);
  font-size: 8px;
  color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.remind_img {
  width: 22rpx;
  height: 22rpx;
  margin-right: 30rpx;
}
.remind_font {
  margin-right: 30rpx;
}

.auction_info {
  width: 100%;
  padding: 28rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
}
.auction_font {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.auction_title {
  font-size: 12px;
  color: #333333;
}
.icon_share {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-left: 1px solid #000;
}
.icon_share image {
  width: 44rpx;
  height: 44rpx;
}
.icon_share text {
  font-size: 8px;
}
.auction_cir {
  position: relative;
  width: 376rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.auction_cir::after {
  position: absolute;
  top: 0;
  left: 170rpx;
  content: '';
  width: 1px;
  height: 22rpx;
  background: #BABABA;
}
.auction_cir text {
  font-size: 8px;
  color: #BABABA;
}
.auction_apply {
  width: 113rpx;
  display: flex;
  justify-content: space-between;
}
.auction_circusee {
  width: 149rpx;
  display: flex;
  justify-content: space-between;
}
.auction_rmb {
  font-size: 16px;
  color: #9D9D9D;
}
.auction_price_bottom {
  display: flex;
  align-items: flex-end;
}
.auction_pirce_font {
  font-size: 16px;
  color: #FF6F61;
  margin-right: 20rpx;
}
.auction_price {
  font-size: 21px;
  color: #FF6F61;
}

.auction_hint {
  display: flex;
  align-items: center;
  width: 100%;
  background: #f1d9c2;
  padding: 22rpx 0 22rpx 42rpx;
  box-sizing: border-box;
  font-size: 12px;
  color: #FE8119;
  border-radius: 0 0 30rpx 30rpx;
  margin-bottom: 35rpx;
}
.auction_hint image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 42rpx;
}

.auction_type_info {
  display: flex;
  background: #fff;
  padding: 21rpx 40rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.auction_type_title {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 140rpx;
  font-size: 9px;
}
.auction_type_title:nth-last-child(2) {
  margin-left: 80rpx;
}
.auction_type_value {
  color: #BABABA;
  margin-left: 16rpx;
}
.auction_type_reserve_price {
  display: flex;
  align-items: center;
}
.auction_type_reserve_price image {
  width: 22rpx;
  height: 22rpx;
}

.auction_bid_record {
  width: 100%;
  background: #fff;
  padding: 21rpx 40rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.auction_bid_record_title {
  display: flex;
  justify-content: space-between;
  padding: 6rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #DCDCDC;
  font-size: 10px;
}
.auction_bid_record_font {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  color: #BABABA;
}
.auction_bid_font {
  color: #000;
  margin-right: 8rpx;
}
.auction_bid_all_btn {
  display: flex;
  align-items: center;
}
.arrows {
  width: 16rpx;
  height: 16rpx;
  border-right: 1px solid #000;
  border-top: 1px solid #000;
  transform: rotate(45deg);
  margin-left: 10rpx;
}
.auction_bid_info {
  display: flex;
  justify-content: space-between;
  padding: 6rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #DCDCDC;
  font-size: 8px;
}
.auction_bid_info_left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 300rpx;
}
.auction_bid_info_left image {
  width: 20rpx;
  height: 20rpx;
}

.store_info {
  width: 100%;
  padding: 28rpx 42rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  margin-bottom: 30rpx;
}
.shopkeeper_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 27rpx;
}
.shopkeeper_info_left {
  width: 280rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
}
.shopkeeper_info_left image {
  width: 52rpx;
  height: 52rpx;
}
.shopkeeper_info_right {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 10px;
}
.store_attestation {
  display: flex;
  align-items: center;
  font-size: 10px;
  margin-bottom: 31rpx;
}
.store_attestation image {
  width: 24rpx;
  height: 28rpx;
  margin: 0 20rpx 0 32rpx;
}
.store_recommend {
  position: relative;
}
.store_bar {
  width: 100%;
  height: 8rpx;
  background: #FF6F61;
}


.bottom_bid {
  position: fixed;
  z-index: 3;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  background: #EEEEEE;
}
.bid_btn {
  width: 579rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  background: #FF6F61;
  font-size: 10px;
  border-radius: 20rpx;
  color: #fff;
}