.top_area{
    z-index: 1;
    width:100%;
    position: relative;
    height:485rpx;
}
.my_release_table {
    display: flex;
    justify-content: center;
    width: 100%;
    padding-top: 58rpx;
    box-sizing: border-box;
  }
  .my_release_table_box {
    display: flex;
  }
  
  .my_release_table_word_auction {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rpx 30rpx;
    width: 210rpx;
    height: 52rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #fff;
    background: #FF7F7F;
    border: 2rpx solid #FF7F7F;
    border-radius: 20rpx 0 0 20rpx;
    margin-right: 4rpx;
  }
  .my_release_table_word_sell{
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rpx 30rpx;
    width: 210rpx;
    height: 52rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #fff;
    background: #FF7F7F;
    border-radius: 0 20rpx 20rpx 0;
  }
  .my_release_table_word_pitch {
    color: #FF7F7F;
    background: #fff;
    border: 2rpx solid #FF7F7F;
  }

.shelf_allarea{
    z-index: 3;
    width:671rpx;
    left:40rpx;
    top:152rpx;
    overflow: hidden;
    position: absolute;
}
.shelf_item{
    width:671rpx;
    margin-bottom:30rpx;
    height:383rpx;
    background: #FFFFFF;
    border-radius: 21rpx;
}
.shelf_item_top{
    width:671rpx;
    height:99rpx;
    box-sizing: border-box;
    padding-left:67rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom:2rpx solid #E8E8E8;
}
.shelf_item_middle{
    width:671rpx;
    height:206rpx;
    box-sizing: border-box;
    padding-left:24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom:2rpx solid #E8E8E8;
}
.shelf_item_bottom{
    width:671rpx;
    height:74rpx;
    box-sizing: border-box;
    padding-right:33rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.shelf_item_top_img{
    width:61rpx;
    height:61rpx;
    border-radius: 50%;
}
.shelf_item_top_nickname{
    font-size: 25rpx;
    margin-left:33rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #333333;
}
.shelf_item_middle_left{
    width:185rpx;
    height:185rpx;
}
.shelf_item_middle_right{
    width:461rpx;
    box-sizing: border-box;
    padding-left:26rpx;
    height:185rpx;
}
.shelf_item_middle_right_title{
    width: 314rpx;
    font-size: 25rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #333333;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.shelf_item_middle_right_param{
    width:100%;
    height:16rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top:28rpx;
}
.shelf_item_middle_right_param_item{
    line-height: 16rpx;
    font-size: 17rpx;
    margin-right:35rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #999999;
}
.shelf_item_middle_right_param_price{
    margin-top:78rpx;
    float: right;
    margin-right:34rpx;
    font-size: 33rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: #FF8D02;
    line-height: 27rpx;
}
.shelf_item_bottom_btn{
    width: 139rpx;
    height: 35rpx;
    border: 1px solid #8F8D8D;
    border-radius: 14rpx;
    text-align: center;
    line-height: 35rpx;
    font-size: 22rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    margin-left:23rpx;
    color: #8F8D8D;
}

