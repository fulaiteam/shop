page {
  background-color: #EEEEEE;
  position: relative;
  width: 100%;
  height: 100%;
  letter-spacing: 0.5px;
}
.bid_goods_list {
  position: absolute;
  z-index: 2;
  width: 100%;
  padding: 20rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.bid_goods_info {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.bid_goods_info image {
  width: 100%;
  height: 342rpx;
}

.bid_goods_font {
  padding: 27rpx 33rpx;
  box-sizing: border-box;
}
.bid_goods_title {
  width: 433rpx;
  font-size: 25rpx;
  color: #333333;
  line-height: 32rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.bid_goods_price_box {
  box-sizing: border-box;
  line-height: 32rpx;
}
.bid_goods_rmb {
  font-size: 25rpx;
  color: #9D9D9D;
}
.bid_goods_price_bottom {
  display: flex;
  align-items: center;
}
.bid_goods_pirce_font {
  font-size: 25rpx;
  color: #FF6F61;
  margin-right: 10rpx;
}
.bid_goods_price {
  font-size: 25rpx;
  color: #FF6F61;
}
.bid_goods_price text {
  font-size: 32rpx;
}

.bid_goods_bids {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 27rpx 33rpx;
  box-sizing: border-box;
}
.bid_title {
  display: flex;
}
.bid_font {
  font-size: 25rpx;
  line-height: 20rpx;
  margin-right: 42rpx;
}
.bid_hint {
  font-size: 7px;
  color: #999999;
}
.bid_not_join {
  font-size: 24rpx;
  padding: 33rpx 0;
  box-sizing: border-box;
}
.bid_goods_apply {
  padding: 70rpx 160rpx;
  box-sizing: border-box;
}
.bid_goods_apply button {
  width: 100%;
  font-size: 25rpx;
  padding: 6rpx 0;
  background: #FF0000;
  color: #fff;
  border-radius: 20rpx;
}
.bid_goods_price_revise {
  padding: 70rpx 80rpx;
  box-sizing: border-box;
}
.bid_goods_price_revise_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bid_goods_btn {
  width: 44rpx;
  height: 44rpx;
  line-height: 38rpx;
  text-align: center;
  border: 1px solid #FF6F61;
  color: #FF6F61;
  font-size: 25rpx;
}
.bid_goods_price_show {
  width: 292rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border: 1px solid #FF6F61;
  color: #FF6F61;
  font-size: 12px;
}
.bid_goods_price_show text{
  font-size: 32rpx;
}

.bid_goods_notive {
  display: flex;
  align-items: center;
  font-size: 21rpx;
  color: #666666;
}
.bid_goods_notive image {
  width: 35rpx;
  height: 35rpx;
  border-radius: 8rpx;
  margin-right: 26rpx;
}
.bid_goods_notive_red {
  background: #FF0000;
}
.bid_goods_notive_gray {
  background: #BFBFBF;
}


.bottom_bid {
  position: fixed;
  z-index: 3;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx 60rpx;
  box-sizing: border-box;
  background: #EEEEEE;
}
.bid_btn {
  width: 604rpx;
  height: 67rpx;
  line-height: 67rpx;
  text-align: center;
  font-size: 25rpx;
  border-radius: 20rpx;
  color: #fff;
  background: #BFBFBF;
}
.bid_btn_confirm {
  background: #FF0000;
}


.windowsBox_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);   /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
}
.windowsBox_container {
  position: fixed;
  bottom: 400rpx;
  width: 467rpx;
  height: 301rpx;
  margin-left: 150rpx;
  background: #fff;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;  /*弹框的悬浮阴影效果，如不需要可注释该行*/
}
.windowsBox_info {
  padding: 50rpx 0 70rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 21rpx;
}
.windowsBox_info_success {
  font-size: 30rpx;
  color: #FA4F47;
  margin: 42rpx 0 13rpx;
}

