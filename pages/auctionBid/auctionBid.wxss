page {
  background-color: #EEEEEE;
  position: relative;
  width: 100%;
  height: 100%;
  letter-spacing: 0.5px;
}
.bid_goods_list {
  position: absolute;
  z-index: 2;
  width: 100%;
  padding: 20rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.bid_goods_info {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.bid_goods_info image {
  width: 100%;
  height: 342rpx;
}

.bid_goods_font {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 27rpx 33rpx;
  box-sizing: border-box;
}
.bid_goods_title {
  width: 340rpx;
  font-size: 11px;
  color: #333333;
  line-height: 32rpx;
}
.bid_goods_price_box {
  padding-left: 47rpx;
  box-sizing: border-box;
  border-left: 1px solid #9D9D9D;
  line-height: 32rpx;
}
.bid_goods_rmb {
  font-size: 11px;
  color: #9D9D9D;
}
.bid_goods_price_bottom {
  display: flex;
  align-items: center;
}
.bid_goods_pirce_font {
  font-size: 11px;
  color: #FF6F61;
  margin-right: 10rpx;
}
.bid_goods_price {
  font-size: 12px;
  color: #FF6F61;
}
.bid_goods_price text {
  font-size: 14px;
}

.bid_goods_bids {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 27rpx 33rpx;
  box-sizing: border-box;
}
.bid_title {
  display: flex;
}
.bid_font {
  font-size: 11px;
  line-height: 20rpx;
  margin-right: 42rpx;
}
.bid_hint {
  font-size: 7px;
  color: #999999;
}
.bid_not_join {
  font-size: 10px;
  padding: 33rpx 0;
  box-sizing: border-box;
}
.bid_goods_apply {
  padding: 70rpx 160rpx;
  box-sizing: border-box;
}
.bid_goods_apply button {
  width: 100%;
  font-size: 11px;
  padding: 6rpx 0;
  background: #FF0000;
  color: #fff;
  border-radius: 20rpx;
}
.bid_goods_price_revise {
  padding: 70rpx 80rpx;
  box-sizing: border-box;
}
.bid_goods_price_revise_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bid_goods_btn {
  width: 44rpx;
  height: 44rpx;
  line-height: 38rpx;
  text-align: center;
  border: 1px solid #FF6F61;
  color: #FF6F61;
  font-size: 12px;
}
.bid_goods_price_show {
  width: 292rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border: 1px solid #FF6F61;
  color: #FF6F61;
  font-size: 12px;
}
.bid_goods_price_show text{
  font-size: 14px;
}

.bid_goods_notive {
  display: flex;
  align-items: center;
  font-size: 9px;
  color: #666666;
}
.bid_goods_notive image {
  width: 35rpx;
  height: 35rpx;
  border-radius: 8rpx;
  margin-right: 26rpx;
}
.bid_goods_notive_red {
  background: #FF0000;
}
.bid_goods_notive_gray {
  background: #BFBFBF;
}


.bottom_bid {
  position: fixed;
  z-index: 3;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx 60rpx;
  box-sizing: border-box;
  background: #EEEEEE;
}
.bid_btn {
  width: 604rpx;
  height: 67rpx;
  line-height: 67rpx;
  text-align: center;
  font-size: 13px;
  border-radius: 20rpx;
  color: #fff;
}
.bid_btn_confirm {
  background: #FF0000;
}
.bid_btn_after {
  background: #BFBFBF;
}