<!--pages/login_phone/login_phone.wxml-->
<view class="box">
<image src="https://jgl.oss-cn-beijing.aliyuncs.com/sale/beijing.png"></image>
<view class="box_text">欢迎注册~</view>
<view class="box_login">
<view>登录    </view>
<view style="color: #FFBD22;text-align: center;margin: 0 15rpx;">/</view>
<view style="color: #acacac;">  注册</view>
</view>
<view class="box_phone">
  请输入手机号
</view>
<!-- 表单输入 -->
<view class="box_input">
 <view class="box_input_phone">
  <image src="https://jgl.oss-cn-beijing.aliyuncs.com/sale/icon_phone.png"></image>
  <input type="number" cursor-spacing="30" id="userid" maxlength="11" placeholder="123456789" bindinput="useridInput" />
 </view>
<view class="box_input_pass">
  <image src="https://jgl.oss-cn-beijing.aliyuncs.com/sale/icon_ys.png"></image>
  <input type="number" cursor-spacing="30" id="userid" maxlength="6" placeholder="请输入验证码" bindinput="passInput" />
 
</view>

 <view class="box_pass_btn">
   |  获取验证码
  </view>
</view>
<!-- 登录按钮 -->
<view class="login_btn">
  登录
</view>
<!-- 游客 -->
<view class="youke">
  游客登录
</view>
<!-- 其他 -->
<view class="qita">
  其它登录方式
</view>
<!-- 微信 -->
<view class="wx">
<image src="https://jgl.oss-cn-beijing.aliyuncs.com/sale/wx.png"></image>
</view>
<view class="login_wx">
  微信
  </view>
</view>
