page {
  background-color: #EEEEEE;
  position: relative;
  width: 100%;
  height: 100%;
  letter-spacing: 0.5rpx;
}

.earnest_money_list {
  position: absolute;
  z-index: 2;
  width: 100%;
  padding: 29rpx 40rpx;
  box-sizing: border-box;
}
.earnest_money_pay_list {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.earnest_money_pay_box {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.earnest_money_pay_line {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #EEEEEE;
  padding: 44rpx 19rpx;
  box-sizing: border-box;
  color: #010101;
}
.earnest_money_one_state {
  display: flex;
  align-items: center;
  border-bottom: none;
  padding: 17rpx 19rpx 80rpx;
  box-sizing: border-box;
  color: #010101;
}
.earnest_money_two_state {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: none;
  padding: 750rpx 19rpx 50rpx;
  box-sizing: border-box;
}
.earnest_money_pay_line .gold {
  width: 32rpx;
  height: 32rpx;
  margin-right: 17rpx;
}
.earnest_money_pay_line_font {
  font-size: 25rpx;
}
.earnest_money_one_state .hint {
  width: 22rpx;
  height: 22rpx;
  margin-right: 8rpx;
}
.earnest_money_notlower_line_font {
  font-size: 11px;
  color: #FF2A00;
}
.earnest_money_message_input {
  font-size: 25rpx;
}
.earnest_money_alrpay_line_font {
  font-size: 24rpx;
  color: #FF2A00;
}

.weixin_pay_box {
  width: 100%;
  height: 78rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.weixin_pay_box_left {
  display: flex;
  align-items: center;
  line-height: 40rpx;
}
.weixin_pay_box_left image {
  width: 31rpx;
  height: 32rpx;
  display: block;
  margin-right: 14rpx;
}
.weixin_pay_box_left text {
  font-size: 25rpx;
  color: #010101;
}


.bottom_bid {
  position: fixed;
  z-index: 3;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx 60rpx;
  box-sizing: border-box;
  background: #EEEEEE;
}
.bid_btn {
  width: 604rpx;
  height: 67rpx;
  line-height: 67rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 20rpx;
  color: #fff;
  background: #FFBA1E;
}


.windowsBox_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);   /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
}
.windowsBox_container {
  position: fixed;
  bottom: 400rpx;
  width: 467rpx;
  height: 301rpx;
  margin-left: 150rpx;
  background: #fff;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;  /*弹框的悬浮阴影效果，如不需要可注释该行*/
}
.windowsBox_info {
  padding: 50rpx 0 70rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 21rpx;
}
.windowsBox_info_success {
  font-size: 30rpx;
  color: #FA4F47;
  margin: 42rpx 0 13rpx;
}
