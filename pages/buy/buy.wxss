page {
  width: 100%;
  height: 100%;
}
.top_img {
  z-index: -1;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 417rpx;
}
.page {
  height: 100vh;
}

.search_box {
  width: 100%;
  padding: 50rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.search_box_top {
  width: 100%;
  margin-bottom: 51rpx;
}
.search_box_top_box {
  position: relative;
  width: 100%;
}
.search_box_top_box_icon {
  position: absolute;
  left: 22rpx;
  top: 50%;
  margin-top: -13.5rpx;
  padding-right: 19rpx;
  display: block;
  width: 23rpx;
  height: 27rpx;
}
.search_box_top_box_cancel {
  position: absolute;
  right: 22rpx;
  top: 50%;
  margin-top: -13.5rpx;
  width: 27rpx;
  height: 27rpx;
  background: url(https://jgl.oss-cn-beijing.aliyuncs.com/search/20210226174815.png) no-repeat;
  background-size:cover;
}
.search_box_top_box_input {
  height: 48rpx;
  padding: 0 60rpx 0 64rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid #fff;
  font-size: 25rpx;
  font-family: Aktiv Grotesk CNSG;
  font-weight: 400;
  border-radius: 24rpx;
  color: #FF9F1E;
}

.buy_box_content {
  background-color: #fff;
  border-radius: 20rpx;
  border: 1px solid #fa955e;
}
.buy_box_content_table {
  display: flex;
  width: 100%;
}
.buy_box_content_table_list {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
}
.buy_box_content_table_list_box {
  height: 42rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 22rpx 0 8rpx;
}
.buy_box_content_table_list_box_font {
  font-size: 25rpx;
  margin-bottom: 4rpx;
}
.buy_box_content_table_list_box_orange {
  width: 63rpx;
  height: 8rpx;
  background: #FF991A;
  border-radius: 4rpx;
}
.buy_box_content_table_list_box_pitch {
  color: #FFA120;
}
.buy_box_content_table_title {
  height: 42rpx;
  margin: 22rpx 0 8rpx 36rpx;
  font-size: 25rpx;
}

.buy_box_content_list {
  width: 100%;
}
.buy_box_content_box {
  position: relative;
  display: flex;
  width: 100%;
  padding: 47rpx 50rpx;
  box-sizing: border-box;
  border-top: 7rpx solid #EEEEEE;
}
.buy_box_content_box_left {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 14rpx;
  overflow: hidden;
}
.buy_box_content_box_left image {
  width: 100%;
  height: 100%;
}
.buy_box_content_box_right {
  flex: 1;
  padding-top: 9rpx;
}
.buy_box_content_box_id {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.buy_box_content_box_id_name {
  font-size: 25rpx;
  font-weight: 600;
  color: #252525;
  margin-right: 42rpx;
}
.buy_box_content_box_id_date {
  font-size: 21rpx;
  color: #5C5C5C;
}
.buy_box_content_box_title {
  margin-bottom: 33rpx;
}
.buy_box_content_box_title_font {
  width: 370rpx;
  font-size: 27rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 14rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.buy_box_content_box_title_particulars {
  width: 460rpx;
  font-size: 21rpx;
  color: #969696;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.buy_box_content_box_title_all {
  font-size: 21rpx;
  color: #2E6EFF;
}
.buy_box_content_box_icon {
  display: flex;
  justify-content: space-between;
}
.buy_box_content_box_icon_box {
  width: 94rpx;
  display: flex;
  align-items: center;
}
.buy_box_content_box_icon_box_img_comment {
  width: 31rpx;
  height: 27rpx;
}
.buy_box_content_box_icon_box_img_look {
  width: 31rpx;
  height: 21rpx;
}
.buy_box_content_box_icon_box_img_collect {
  width: 26rpx;
  height: 22rpx;
}
.buy_box_content_box_icon_box_count {
  font-size: 19rpx;
  color: #888;
  margin-left: 13rpx;
}
.buy_box_content_box_icon_box_count_like {
  color: #FFB03F;
}
.buy_box_content_box_hot {
  position: absolute;
  top: 50rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.buy_box_content_box_hot_img {
  width: 28rpx;
  height: 32rpx;
}
.buy_box_content_box_hot_font {
  font-size: 21rpx;
  font-weight: 600;
  color: #F2BF46;
}
.buy_box_content_none {
  width: 100%;
  height: 328rpx;
  line-height: 328rpx;
  text-align: center;
  color: rgb(187, 182, 182);
  font-size: 26rpx;
}
